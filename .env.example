# WhatsApp Shopping Chatbot Configuration
# Copy this file to .env and customize as needed

# Bot Settings
BOT_NAME="Premium Shop Bot"
SHOP_NAME="Premium Shop"

# Product Stock Configuration
DEFAULT_STOCK=10  # Default stock for premium accounts
VCC_STOCK=5       # Default stock for virtual credit cards

# Business Contact Information
CONTACT_EMAIL="support@premiumshop.com"
CONTACT_WHATSAPP="Your WhatsApp Number"
WORKING_HOURS="24/7"

# Payment Information
PAYMENT_METHOD="Bank Transfer / PayPal / Cryptocurrency"
PAYMENT_INSTRUCTIONS="Send payment to: [Your Payment Details]"

# System Settings
SESSION_TIMEOUT=30  # Minutes before session expires
CLEANUP_INTERVAL=10  # Minutes between session cleanups

# Redis Configuration (Optional - for session persistence)
# Format: redis://[[username:]password@]host[:port][/database]
# Example: redis://localhost:6379 (local)
#          redis://user:pass@redis-server:6379/0 (with auth)
#          rediss://redis-secure:6380 (TLS)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
SESSION_TTL=1800  # Session TTL in seconds (default: 1800 = 30 minutes)

# Manual Payment Accounts Configuration
# E-Wallet accounts (for manual transfers)
# Set enabled=true to activate, false to disable
DANA_NUMBER=081234567890
DANA_NAME=John Doe
DANA_ENABLED=true

GOPAY_NUMBER=081234567890
GOPAY_NAME=John Doe
GOPAY_ENABLED=true

OVO_NUMBER=081234567890
OVO_NAME=John Doe
OVO_ENABLED=true

SHOPEEPAY_NUMBER=081234567890
SHOPEEPAY_NAME=John Doe
SHOPEEPAY_ENABLED=true

# Bank accounts (for manual transfers)
BCA_ACCOUNT=1234567890
BCA_NAME=John Doe
BCA_ENABLED=true

BNI_ACCOUNT=1234567890
BNI_NAME=John Doe
BNI_ENABLED=true

BRI_ACCOUNT=1234567890
BRI_NAME=John Doe
BRI_ENABLED=true

MANDIRI_ACCOUNT=1234567890
MANDIRI_NAME=John Doe
MANDIRI_ENABLED=true

# Authentication Settings
# Set USE_PAIRING_CODE=true to use pairing code instead of QR code
# Format phone number: country code + number (no + or spaces)
# Example: 6281234567890 for Indonesia, 12025550108 for USA
USE_PAIRING_CODE=false
PAIRING_PHONE_NUMBER=

# Admin Configuration (for admin commands)
# Format: country code + number (no + or spaces)
ADMIN_NUMBER_1=
ADMIN_NUMBER_2=
ADMIN_NUMBER_3=

# QRIS Payment Configuration (InterActive QRIS)
# Get your APIKEY and mID from: https://qris.interactive.co.id/
QRIS_APIKEY=
QRIS_MID=
USD_TO_IDR_RATE=15000

# Xendit Payment Configuration (QRIS Only - Automated)
# Get your API keys from: https://dashboard.xendit.co/settings/developers#api-keys
# Only used for QRIS automated QR code generation
# For E-Wallet and Bank transfers, configure manual accounts above
XENDIT_SECRET_KEY=
XENDIT_WEBHOOK_TOKEN=
WEBHOOK_URL=

# Advanced Settings (for production)
NODE_ENV=production
LOG_LEVEL=info

# AI Configuration (Gemini 2.5 Flash Lite) - NEW!
# Get your API key from: https://aistudio.google.com/app/apikey
# Features: Typo correction, Product Q&A, Recommendations, Description generator
# Cost: $0.00005/call (97% cheaper than GPT-4o)
AI_ENABLE=false
GOOGLE_API_KEY=
AI_MODEL=gemini-2.0-flash-exp
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=500
AI_RATE_LIMIT_HOURLY=5
AI_RATE_LIMIT_DAILY=20
AI_COST_ALERT_THRESHOLD=5.0
AI_MONTHLY_BUDGET=50.0
