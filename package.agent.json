{
  "name": "whatsapp-shopping-chatbot",
  "version": "2.0.0",
  "description": "WhatsApp Shopping Chatbot with Modular Architecture",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "node tests/test.js",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/ lib/ services/ --ext .js",
    "lint:fix": "eslint src/ lib/ services/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"lib/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"lib/**/*.js\"",
    "agent:test": "bash scripts/test-agent.sh",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "check:circular": "madge --circular --extensions js src/",
    "check:size": "find src -name '*.js' -exec wc -l {} +",
    "analyze:complexity": "complexity-report src/ --format markdown",
    "precommit": "npm run lint && npm run test",
    "prepare": "husky install || true"
  },
  "keywords": ["whatsapp", "chatbot", "shopping", "nodejs", "modular"],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "whatsapp-web.js": "^1.23.0",
    "qrcode-terminal": "^0.12.0",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "madge": "^6.1.0",
    "complexity-report": "^2.0.0",
    "husky": "^8.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
