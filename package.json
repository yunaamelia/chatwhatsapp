{
  "name": "whatsapp-shopping-chatbot",
  "version": "1.0.0",
  "description": "WhatsApp Shopping Chatbot Assistant for selling premium accounts and virtual credit cards",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node index.js",
    "test": "mocha 'tests/unit/**/*.test.js' 'tests/integration/**/*.test.js' --timeout 10000",
    "test:unit": "mocha 'tests/unit/**/*.test.js' --timeout 5000",
    "test:integration": "mocha 'tests/integration/**/*.test.js' --timeout 10000",
    "test:e2e": "mocha 'tests/e2e/**/*.test.js' --timeout 30000",
    "test:coverage": "c8 --reporter=html --reporter=text npm run test",
    "test:watch": "mocha 'tests/**/*.test.js' --watch --timeout 10000",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:legacy": "node tests/test.js",
    "lint": "eslint *.js lib/*.js services/*.js src/**/*.js",
    "lint:fix": "eslint *.js lib/*.js services/*.js src/**/*.js --fix"
  },
  "keywords": [
    "whatsapp",
    "chatbot",
    "shopping",
    "assistant"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/google": "^2.0.26",
    "ai": "^5.0.86",
    "axios": "^1.13.1",
    "body-parser": "^2.2.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "redis": "^5.9.0",
    "whatsapp-web.js": "^1.34.1",
    "xendit-node": "^7.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "chai": "^6.2.0",
    "eslint": "^9.39.0",
    "mocha": "^11.7.4"
  }
}
